<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/stickrice"
    android:background="@drawable/mintback5">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:background="#ff72db9f"
        android:backgroundTintMode="screen">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btnback"
            android:background="@drawable/back"
            android:layout_marginLeft="7dp"
            android:contentDescription="@string/title_activity_stickricerecipe" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Recipe"
            android:id="@+id/textView"
            android:autoText="false"
            android:textSize="26sp"
            android:layout_gravity="center"
            android:layout_marginLeft="93dp" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btnLogout"
            android:background="@drawable/logout"
            android:layout_marginLeft="92dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/title_activity_stickricerecipe" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="400dp"
        android:background="#279bffde"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_weight="0.69">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">

                <ImageButton
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageButton21"
                    android:background="@drawable/like"
                    android:layout_gravity="left"
                    android:contentDescription="@string/title_activity_stickricerecipe" />

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/ratingBar"
                    android:layout_marginLeft="8dp"
                    android:numStars="4" />
            </LinearLayout>

            <ImageView
                android:layout_width="321dp"
                android:layout_height="163dp"
                android:id="@+id/imageView7"
                android:background="@drawable/stickyrice"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/title_activity_stickricerecipe" />

            <AbsoluteLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TabHost
                    android:id="@+id/tabHost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_x="0dp"
                    android:layout_y="0dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TabWidget
                            android:id="@android:id/tabs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            android:transitionGroup="false"
                            android:touchscreenBlocksFocus="false"
                            android:tabStripEnabled="false"
                            android:measureWithLargestChild="false"
                            android:longClickable="false"
                            android:focusableInTouchMode="false"
                            android:focusable="false"
                            android:clickable="false"
                            android:baselineAligned="false">
                        </TabWidget>

                        <FrameLayout
                            android:id="@android:id/tabcontent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:focusableInTouchMode="false"
                            android:focusable="false"
                            android:longClickable="false"
                            android:measureAllChildren="false"
                            android:nestedScrollingEnabled="false"
                            android:touchscreenBlocksFocus="false"
                            android:transitionGroup="false">


                            <LinearLayout
                                android:id="@+id/Ingridant"
                                android:layout_width="match_parent"
                                android:layout_height="162dp"
                                android:orientation="vertical">

                                <ScrollView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/scrollView3" >

                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content">

                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textAppearance="?android:attr/textAppearanceMedium"
                                                android:text="Glutinous Rice"
                                                android:id="@+id/textView3"
                                                android:textSize="16sp" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textAppearance="?android:attr/textAppearanceLarge"
                                                android:text="400g"
                                                android:id="@+id/textView4"
                                                android:textSize="16sp"
                                                android:layout_marginLeft="175dp" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content" >

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textAppearance="?android:attr/textAppearanceMedium"
                                                android:text="Chinese Sausage"
                                                android:id="@+id/textView5"
                                                android:textSize="16sp" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textAppearance="?android:attr/textAppearanceLarge"
                                                android:text="120g"
                                                android:id="@+id/textView6"
                                                android:textSize="16sp"
                                                android:layout_marginLeft="155dp" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content" >

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textAppearance="?android:attr/textAppearanceMedium"
                                                android:text="Dried Shrimp"
                                                android:id="@+id/textView7"
                                                android:textSize="16sp" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textAppearance="?android:attr/textAppearanceLarge"
                                                android:text="Perference"
                                                android:id="@+id/textView8"
                                                android:textSize="16sp"
                                                android:layout_marginLeft="145dp" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content" >

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textAppearance="?android:attr/textAppearanceMedium"
                                                android:text="Dark Soy Sauce"
                                                android:id="@+id/textView21"
                                                android:textSize="16sp" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textAppearance="?android:attr/textAppearanceLarge"
                                                android:text="1tsp"
                                                android:id="@+id/textView22"
                                                android:textSize="16sp"
                                                android:layout_marginLeft="172dp" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content" >

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textAppearance="?android:attr/textAppearanceMedium"
                                                android:text="Dried Shrimp Water"
                                                android:id="@+id/textView19"
                                                android:textSize="16sp" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textAppearance="?android:attr/textAppearanceLarge"
                                                android:text="50ml"
                                                android:id="@+id/textView20"
                                                android:textSize="16sp"
                                                android:layout_marginLeft="139dp" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content" >

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textAppearance="?android:attr/textAppearanceMedium"
                                                android:text="Spring Onion"
                                                android:id="@+id/textView17"
                                                android:textSize="16sp" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textAppearance="?android:attr/textAppearanceLarge"
                                                android:text="2 grain"
                                                android:id="@+id/textView18"
                                                android:textSize="16sp"
                                                android:layout_marginLeft="174dp" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content" >

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textAppearance="?android:attr/textAppearanceMedium"
                                                android:text="Egg"
                                                android:id="@+id/textView15"
                                                android:textSize="16sp" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textAppearance="?android:attr/textAppearanceLarge"
                                                android:text="Perference"
                                                android:id="@+id/textView16"
                                                android:textSize="16sp"
                                                android:layout_marginLeft="208dp" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content" >

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textAppearance="?android:attr/textAppearanceMedium"
                                                android:text="Sugar"
                                                android:id="@+id/textView13"
                                                android:textSize="16sp" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textAppearance="?android:attr/textAppearanceLarge"
                                                android:id="@+id/textView14"
                                                android:textSize="16sp"
                                                android:layout_marginLeft="227dp"
                                                android:text="1/2tsp" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content" >

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textAppearance="?android:attr/textAppearanceMedium"
                                                android:text="Oyster Sauce"
                                                android:id="@+id/textView11"
                                                android:textSize="16sp" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textAppearance="?android:attr/textAppearanceLarge"
                                                android:text="2tsp"
                                                android:id="@+id/textView12"
                                                android:textSize="16sp"
                                                android:layout_marginLeft="190dp" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content" >

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textAppearance="?android:attr/textAppearanceMedium"
                                                android:text="Shallot"
                                                android:id="@+id/textView9"
                                                android:textSize="16sp" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textAppearance="?android:attr/textAppearanceLarge"
                                                android:text="3 grain"
                                                android:id="@+id/textView10"
                                                android:textSize="16sp"
                                                android:layout_marginLeft="218dp" />
                                        </LinearLayout>

                                    </LinearLayout>
                                </ScrollView>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/Recipe"
                                android:layout_width="match_parent"
                                android:layout_height="173dp"
                                android:background="#6adef4ff"
                                android:orientation="vertical">

                                <ScrollView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:id="@+id/scrollView4" >

                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:text="Fried steamed sticky rice would be easy to make if it was steamed."
                                            android:id="@+id/textView23"
                                            android:layout_marginTop="5dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:text="Glutinous Rice and Dried shrimp need to be put in the cold water for 2 hours."
                                            android:id="@+id/textView24"
                                            android:layout_marginTop="5dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:text="Steam the Glutinous Rice for 30 minutes when it is dry."
                                            android:id="@+id/textView25"
                                            android:layout_marginTop="5dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:text="Coupled with your favorite sausages to steam for 10 minutes."
                                            android:id="@+id/textView26"
                                            android:layout_marginTop="5dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:text="Diced the Chinese sausage, Shrimp, Onion."
                                            android:id="@+id/textView27"
                                            android:layout_marginTop="5dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:text="Mix the Oyster sauce, sugar, soy sauce, shrimp mixed with water."
                                            android:id="@+id/textView28"
                                            android:layout_marginTop="5dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:text="Fried them together."
                                            android:id="@+id/textView29"
                                            android:layout_marginTop="5dp" />
                                    </LinearLayout>
                                </ScrollView>
                            </LinearLayout>

                        </FrameLayout>

                    </LinearLayout>
                </TabHost>
            </AbsoluteLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:background="#ffffffff"
        android:layout_gravity="bottom">

        <ImageButton
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnhome"
            android:background="@drawable/greyhome"
            android:adjustViewBounds="false"
            android:backgroundTint="#ff72db9f"
            android:backgroundTintMode="screen"
            android:contentDescription="@string/title_activity_stickricerecipe" />

        <ImageButton
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnrecipe"
            android:backgroundTint="#ff30c3d2"
            android:backgroundTintMode="screen"
            android:background="@drawable/recipe"
            android:contentDescription="@string/title_activity_stickricerecipe" />

        <ImageButton
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnicebox"
            android:backgroundTintMode="screen"
            android:backgroundTint="#ff72db9f"
            android:background="@drawable/greyicebox"
            android:clickable="false"
            android:contentDescription="@string/title_activity_stickricerecipe" />

        <ImageButton
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:id="@+id/btntips"
            android:backgroundTint="#ff72db9f"
            android:backgroundTintMode="screen"
            android:background="@drawable/greytips"
            android:contentDescription="@string/title_activity_stickricerecipe" />

        <ImageButton
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnprofile"
            android:background="@drawable/greyprofile"
            android:backgroundTintMode="screen"
            android:backgroundTint="#ff72db9f"
            android:contentDescription="@string/title_activity_stickricerecipe" />
    </LinearLayout>

</LinearLayout>