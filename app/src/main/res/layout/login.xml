<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="1"
    android:id="@+id/mintstore"
    android:background="@drawable/mintback2">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="153dp"
        android:weightSum="1">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:id="@+id/imageView3"
            android:src="@drawable/mint_cooking"
            android:layout_marginLeft="100dp"
            android:layout_weight="0.08"
            android:contentDescription="@string/app_name" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:paddingTop="30dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:background="#82d8d8c7">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText"
            android:text="Email"
            android:background="#fffbfffb"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:editable="false"
            android:elegantTextHeight="false"
            android:clickable="false"
            android:autoText="false"
            android:textIsSelectable="false"
            android:singleLine="false"
            android:selectAllOnFocus="false"
            android:nestedScrollingEnabled="false"
            android:longClickable="false"
            android:enabled="false"
            android:focusableInTouchMode="false"
            android:textStyle="bold|italic"
            android:phoneNumber="false" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:ems="10"
            android:id="@+id/editText2"
            android:text="Password"
            android:textColor="#ff6c6c6c"
            android:background="#ffffffff"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textStyle="bold|italic" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember me"
            android:id="@+id/checkBox"
            android:textSize="15dp"
            android:checked="true"
            android:clickable="false" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Forget you password"
            android:id="@+id/button"
            android:layout_gravity="right"
            android:layout_marginTop="-25dp"
            android:textSize="13sp"
            android:background="#00ffffff" />

        <Button
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/btnLogin"
            android:background="#ff6040d9"
            android:textColorHighlight="#ff000000"
            android:textSize="25sp"
            android:textStyle="bold"
            android:nestedScrollingEnabled="false"
            android:layout_margin="15dp"
            android:padding="15dp"
            android:textColor="#ffffffff"
            android:clickable="true"
            android:onClick="@string/title_activity_home" />

        <Button
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:id="@+id/btnSignup"
            android:background="#ff1bff38"
            android:textColor="#ffffffff"
            android:textColorHighlight="#ff070707"
            android:textSize="25sp"
            android:textStyle="bold"
            android:nestedScrollingEnabled="false"
            android:padding="15dp"
            android:layout_gravity="right"
            android:layout_marginTop="-75dp"
            android:clickable="true"
            android:onClick="@string/title_activity_signup" />
    </LinearLayout>

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton17"
        android:background="@drawable/fblogin"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/app_name" />

</LinearLayout>