<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:background="#ff72db9f"
        android:backgroundTintMode="screen">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btnback"
            android:background="@drawable/back"
            android:layout_marginLeft="7dp"
            android:contentDescription="@string/title_activity_editicebox" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Edit"
            android:id="@+id/textView"
            android:layout_gravity="center"
            android:layout_marginLeft="115dp"
            android:autoText="false"
            android:textSize="26sp" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btnLogout"
            android:background="@drawable/logout"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="104dp"
            android:contentDescription="@string/title_activity_editicebox" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="400dp"
        android:background="#279bffde"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.54"
            android:orientation="vertical"
            android:weightSum="1"
            android:background="#279bffde">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ExpandableListView
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:id="@+id/expandableListView" />
            </FrameLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <Button
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:text="Add"
                    android:id="@+id/button22"
                    android:background="#ff6040d9"
                    android:textColor="#ffffffff"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText9"
                    android:inputType="text|textAutoComplete|textAutoCorrect"
                    android:text="Material"
                    android:textColor="#ff6c6c6c"
                    android:textStyle="bold|italic" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/editText10"
                    android:text="Quantity"
                    android:textStyle="bold|italic"
                    android:textColor="#ff6c6c6c" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_marginTop="5dp">

                <Button
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:text="Delete"
                    android:id="@+id/button23"
                    android:background="#ff1bff38"
                    android:textColor="#ffffffff"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText11"
                    android:inputType="text|textAutoComplete|textAutoCorrect"
                    android:text="Material"
                    android:textColor="#ff6c6c6c"
                    android:textStyle="bold|italic" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/editText12"
                    android:text="Quantity"
                    android:textStyle="bold|italic"
                    android:textColor="#ff6c6c6c" />
            </LinearLayout>

            <ImageButton
                android:layout_width="160dp"
                android:layout_height="45dp"
                android:id="@+id/btnConfirm"
                android:background="@drawable/confirmbutton"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/title_activity_editicebox" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:layout_gravity="bottom">

        <ImageButton
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnhome"
            android:background="@drawable/greyhome"
            android:adjustViewBounds="false"
            android:backgroundTint="#ff72db9f"
            android:backgroundTintMode="screen"
            android:contentDescription="@string/title_activity_editicebox" />

        <ImageButton
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnrecipe"
            android:backgroundTint="#ff72db9f"
            android:backgroundTintMode="screen"
            android:background="@drawable/greyrecipe"
            android:contentDescription="@string/title_activity_editicebox" />

        <ImageButton
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnicebox"
            android:backgroundTintMode="screen"
            android:backgroundTint="#ff30c3d2"
            android:background="@drawable/icebox"
            android:contentDescription="@string/title_activity_editicebox" />

        <ImageButton
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:id="@+id/btntips"
            android:backgroundTint="#ff72db9f"
            android:backgroundTintMode="screen"
            android:background="@drawable/greytips"
            android:contentDescription="@string/title_activity_editicebox" />

        <ImageButton
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnprofile"
            android:background="@drawable/greyprofile"
            android:backgroundTintMode="screen"
            android:backgroundTint="#ff72db9f"
            android:contentDescription="@string/title_activity_editicebox" />
    </LinearLayout>

</LinearLayout>